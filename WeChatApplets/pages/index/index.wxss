.shadow {
	box-shadow: 2rpx 4rpx 15rpx #c2c2c2
}

.shadow-mini {
	box-shadow: 2rpx 4rpx 10rpx #c2c2c2
}

.tower-swiper .tower-item {
	-webkit-transform: scale(calc(.5 + var(--index) / 10));
	transform: scale(calc(.5 + var(--index) / 10));
	margin-left: calc(var(--left) * 100rpx - 150rpx);
	z-index: var(--index)
}

.week-container {
	white-space: nowrap;
	margin: 0 auto;
	position: relative;
	overflow: hidden;
	z-index: 1;
	padding: 20rpx 25rpx;
	border-radius: 15rpx
}

.week-container .swiper-wrapper {
	position: relative;
	width: 100%;
	height: 100%;
	z-index: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin: 0 auto;
	border-radius: 15rpx
}

.week-container .swiper-wrapper .new-article {
	display: inline-block;
	background: #fff;
	border-radius: 12rpx;
	-webkit-flex-shrink: 0;
	flex-shrink: 0;
	width: 50%;
	height: 100%;
	position: relative;
	-webkit-transition-property: -webkit-transform;
	transition-property: -webkit-transform;
	transition-property: transform;
	transition-property: transform, -webkit-transform;
	-webkit-transform: translateZ(0);
	transform: translateZ(0);
	margin-right: 20rpx
}

.week-container .swiper-wrapper .new-article .article-img {
	width: 100%;
	max-height: 220rpx;
	display: block;
	border-top-left-radius: 12rpx;
	border-top-right-radius: 12rpx
}

.week-container .swiper-wrapper .new-article .article-title {
	display: block;
	padding: 16rpx 0 16rpx 16rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap
}

.week-container .swiper-wrapper .new-article .detail {
	position: absolute;
	right: 16rpx;
	font-size: 26rpx;
	color: #666
}

.thumb {
	float: left;
	width: 280rpx
}

.moretext-cut {
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	text-overflow: ellipsis;
	overflow: hidden
}
